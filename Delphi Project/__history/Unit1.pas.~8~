{$R *.dfm}

uses Unit2;

procedure Sartlar(S_Sure: Ansistring; Yas_Sarti: Ansistring);

begin
  Form1.hide;
  Form2.Show;
  for i := 0 to StrToInt(S_Sure) do
  begin
    Form2.Label5.Caption := i.ToString;
    Sleep(20);
    Application.ProcessMessages;
  end;

  for i := 0 to StrToInt(Yas_Sarti) do
  begin
    Form2.Label7.Caption := i.ToString;
    Sleep(20);
    Application.ProcessMessages;
  end;
end;


procedure Sartlar2(S_Sure1:Ansistring; Yas_Sarti1:AnsiString);
begin
  for i := 0 to StrToInt(S_Sure1) do
  begin
    Form2.Label12.Caption:=i.ToString;
    Sleep(20);
    Application.ProcessMessages;
  end;

  for i := 0 to StrToInt(Yas_Sarti1) do
    begin
      Form2.Label13.Caption:=i.ToString;
      Sleep(20);
      Application.ProcessMessages;
    end;
end;


function Prim_Sarti(Max_Prim: integer; Prim_Gun: integer): integer;

begin
  if Max_Prim = Prim_Gun then
  begin
    Form2.Label9.Caption := 'Yok!';
  end
  else
  begin
    result := Max_Prim - Prim_Gun;
    if Result>0 then
    begin
       Form2.Label9.Caption := result.ToString;
    end
    else
    begin
        Form2.Label9.Caption :='YOK';
    end;

  end;

end;

function Prim_Sarti1(Max_Prim1: integer; Prim_Gun1:integer):integer;
begin
   if Max_Prim1=GunPrim then
   begin
     Form2.label15.Caption:='YOK';
   end
   else
   begin
     Result:=Max_Prim1-GunPrim;
     if Result>0 then
    begin
       Form2.Label15.Caption := result.ToString;
    end
    else
    begin
        Form2.Label15.Caption :='YOK';
    end;
   end;
end;

procedure TForm1.CheckBox2Click(Sender: TObject);
begin
  if CheckBox2.Checked then
  begin
    Edit1.Enabled := true;
  end
  else
  begin
    Edit1.Enabled := false;
    Edit1.Clear;
  end;
end;

procedure TForm1.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Application.Terminate;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  Form1.Position := poScreenCenter;
  Form1.BorderStyle := bsToolWindow;
  Edit1.Enabled := false;
  Edit1.MaxLength := 3;
  Edit4.MaxLength := 4;

  Edit4.Hint := 'Max 5 Basamaklý.';
  Edit1.Hint := '40-100';
  Edit1.ShowHint := true;
  Edit4.ShowHint := true;
  DateTimePicker1.DateTime:=Now;
end;

procedure TForm1.SpeedButton1Click(Sender: TObject);
begin
  Edit1.Clear;
  Edit4.Clear;
  RadioButton3.Checked := false;
  RadioButton4.Checked := false;
  CheckBox2.Checked := false;
  DateTimePicker1.DateTime := Now;
end;

procedure TForm1.SpeedButton2Click(Sender: TObject);

begin
  // ENGELLÝLÝK DURUMU KONTROL
  while true do
  begin
    if (CheckBox2.Checked = true) then
    begin
      if Edit1.Text = '' then
      begin
        MessageDlg('Engellilik Oraný Giriniz!', TMsgDlgType.mtWarning,
          [TMsgDlgBtn.mbOK], 0);

        exit;
      end

      else if (StrToInt(Edit1.Text) < 40) or (StrToInt(Edit1.Text) > 100) then
      begin
        MessageDlg('Engellilik oraný (40-100) Arasýnda Olmalýdýr!',
          TMsgDlgType.mtWarning, [TMsgDlgBtn.mbOK], 0);
        exit;
      end
      else
      begin
        EOraný := StrToInt(Edit4.Text);
        break;
      end;

    end
    else
    begin
      break;
    end;

  end;

  // DÝÐER KONTROLLER   -1

  while true do
  begin
    if (Edit4.Text = '') then
    begin
      MessageDlg('Lütfen Prim Gün Sayýnýzý Giriniz!', TMsgDlgType.mtWarning,
        [TMsgDlgBtn.mbOK], 0);
      exit;
    end
    else
    begin
      break;
    end;
  end;

  GunPrim := StrToInt(Edit4.Text);
  SGiris := DateTimePicker1.DateTime;
  SGirisStr := FormatDateTime('ddmmyyyy', SGiris);


  // DÝÐER KONTROLLER   -2

  while true do
  begin
    SGiris := DateTimePicker1.Date;
    SGirisStr := FormatDateTime('yyyy', SGiris);
    SGirisYil := StrToInt(SGirisStr);
    if (SGirisYil < 1950) or (SGirisYil > 2036) then
    begin
      MessageDlg('Giriþ Tarihi (1950-2050) Arasýnda Olmalýdýr!',
        TMsgDlgType.mtWarning, [TMsgDlgBtn.mbOK], 0);
      exit;
    end
    else if (GunPrim < 0) or (GunPrim > 7200) then
    begin

      MessageDlg('Prim Gün (0-7200) Arasýnda Olmalýdýr!', TMsgDlgType.mtWarning,
        [TMsgDlgBtn.mbOK], 0);
      exit;
    end
    else if ((RadioButton3.Checked = false) and (RadioButton4.Checked = false))
    then
    begin
      MessageDlg('Cinsiyetinizi Seçiniz!', TMsgDlgType.mtWarning,
        [TMsgDlgBtn.mbOK], 0);
      exit;
    end;

    break;
  end;


  //EMEKLÝLÝK MOTORU

