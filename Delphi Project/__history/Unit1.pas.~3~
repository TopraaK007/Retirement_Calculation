unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.ComCtrls,
  Vcl.Imaging.jpeg, Vcl.ExtCtrls;

type
  TForm1 = class(TForm)
    Image1: TImage;
    RadioButton3: TRadioButton;
    RadioButton4: TRadioButton;
    CheckBox2: TCheckBox;
    Edit1: TEdit;
    Edit4: TEdit;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    SpeedButton2: TSpeedButton;
    DateTimePicker1: TDateTimePicker;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure CheckBox2Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure SpeedButton2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  GunPrim: integer;
  EOraný: integer;
  SGiris: TDateTime;
  SGirisStr: string;
  SGirisYil:integer;
  SGirisInt: integer;
  Cinsiyet: Ansistring;

implementation

{$R *.dfm}

uses Unit2;

procedure TForm1.CheckBox2Click(Sender: TObject);
begin
  if CheckBox2.Checked then
  begin
    Edit1.Enabled := true;
  end
  else
  begin
    Edit1.Enabled := false;
    Edit1.Clear;
  end;
end;

procedure TForm1.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  Application.Terminate;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  Form1.Position := poScreenCenter;
  Form1.BorderStyle := bsToolWindow;
  Edit1.Enabled := false;
  Edit1.MaxLength := 3;
  Edit4.MaxLength := 4;

  Edit4.Hint := 'Max 5 Basamaklý.';
  Edit1.Hint := '40-100';
  Edit1.ShowHint := true;
  Edit4.ShowHint := true;

end;

procedure TForm1.SpeedButton2Click(Sender: TObject);
begin
    //ENGELLÝLÝK DURUMU KONTROL
  while true do
  begin
    if (CheckBox2.Checked = true) then
    begin
      if Edit1.Text = '' then
      begin
        MessageDlg('Engellilik Oraný Giriniz!', TMsgDlgType.mtWarning,
          [TMsgDlgBtn.mbOK], 0);

        exit;
      end

      else if (StrToInt(Edit1.Text) < 40) or (StrToInt(Edit1.Text) > 100) then
      begin
        MessageDlg('Engellilik oraný (40-100) Arasýnda Olmalýdýr!',
          TMsgDlgType.mtWarning, [TMsgDlgBtn.mbOK], 0);
          exit;
      end
      else
      begin
        EOraný:=StrToInt(Edit4.Text);
        break;
      end;


    end
    else
    begin
      break;
    end;

  end;

  //DÝÐER KONTROLLER   -1

  while True do
  begin
     if (Edit4.Text='') then
      begin
         MessageDlg('Lütfen Prim Gün Sayýnýzý Giriniz!',
        TMsgDlgType.mtWarning, [TMsgDlgBtn.mbOK], 0);
        exit;
      end
      else
      begin
        break;
      end;
  end;

  GunPrim := StrToInt(Edit4.Text);
  SGiris:=DateTimePicker1.DateTime;
  SGirisStr:=FormatDateTime('ddmmyyyy',SGiris);
  SGirisInt:=StrToInt(SGirisStr);

   //DÝÐER KONTROLLER   -2

  while true do
  begin
     SGiris := DateTimePicker1.Date;
    SGirisStr := FormatDateTime('yyyy', SGiris);
    SGirisYil := StrToInt(SGirisStr);
    if (SGirisYil< 1950) or (SGirisYil > 2050) then
    begin
      MessageDlg('Giriþ Tarihi (1950-2050) Arasýnda Olmalýdýr!',
        TMsgDlgType.mtWarning, [TMsgDlgBtn.mbOK], 0);
      exit;
    end
    else if (GunPrim < 0) or (GunPrim > 7200) then
    begin

      MessageDlg('Prim Gün (0-7200) Arasýnda Olmalýdýr!', TMsgDlgType.mtWarning,
        [TMsgDlgBtn.mbOK], 0);
      exit;
    end
    else if ((RadioButton3.Checked=false) and (RadioButton4.Checked=false)) then
    begin
       MessageDlg('Cinsiyetinizi Seçiniz!', TMsgDlgType.mtWarning,[TMsgDlgBtn.mbOK], 0);
       exit;
    end;

  break;
  end;
  Form1.hide;
  Form2.Show;


end;

end.
